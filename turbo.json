{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [
		".env"
	],
	"tasks": {
		"build": {
			"dependsOn": [
				"^build"
			],
			"inputs": [
				"$TURBO_DEFAULT$",
				".env*"
			],
			"outputs": [
				"dist/**"
			]
		},
		"lint": {
			"dependsOn": [
				"^lint"
			]
		},
		"format": {
			"dependsOn": [
				"^format"
			]
		},
		"format:ci": {
			"dependsOn": [
				"^format:ci"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}