generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Order     Order[]
}

model Order {
  id          String       @id @default(cuid())
  userId      String?
  user        User?        @relation(fields: [userId], references: [id])
  orderTotal  Float?
  nameOnCard  String?
  cardInfo    String?
  expiryDate  String?
  cvv         String?
  address     String?
  city        String?
  state       String?
  zip         String?
  last4Digits String?
  products    Product[]
  Delivery    Delivery[]
  status      OrderStatus? @default(PENDING)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  imageUrl    String
  stock       Int
  description String
  price       Float
  Order       Order[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Delivery {
  id        String         @id @default(cuid())
  orderId   String
  order     Order?         @relation(fields: [orderId], references: [id])
  status    DeliveryStatus @default(PENDING)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELLED
}

enum DeliveryStatus {
  PENDING
  DELIVERED
}
