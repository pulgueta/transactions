{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": ["node_modules", "dist", "build", ".turbo"],
    "include": ["**/*.{ts,tsx}"]
  },
  "formatter": {
    "enabled": true,
    "include": ["**/*.{ts,tsx,json,yaml}"],
    "ignore": ["node_modules", "dist", "build", ".turbo"],
    "lineWidth": 100,
    "lineEnding": "lf",
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "trailingCommas": "es5",
      "jsxQuoteStyle": "double"
    },
    "linter": {
      "enabled": true
    }
  }
}
